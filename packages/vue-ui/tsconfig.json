{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue"
  ],
  "exclude": [
    "**/__tests__/*",
    "./dist"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  }
}